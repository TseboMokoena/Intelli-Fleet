<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="coding_crusade.intellifleetmobile.MainActivity"
    android:background="#2f323b"
    android:gravity="center"
    android:fillViewport="true"
    tools:showIn="@layout/app_bar_main"
    >

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="coding_crusade.intellifleetmobile.activity_fragment"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2f323b"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Update Delivery"
            android:id="@+id/textView24"
            android:textColor="#FFE93F80"
            android:layout_below="@+id/btnVPS"
            android:layout_alignRight="@+id/btnVPS"
            android:layout_alignEnd="@+id/btnVPS"
            android:layout_marginRight="0dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVRS"
            android:src="@mipmap/vr"
            android:tint="#a3a1a1"
            android:background="#2f323b"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_alignRight="@+id/btnVPD"
            android:layout_alignEnd="@+id/btnVPD" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMB"
            android:src="@mipmap/mb150"
            android:tint="#a3a1a1"
            android:background="#2f323b"
            android:layout_marginTop="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="View Routing Schedule"
        android:id="@+id/textView26"
        android:textColor="#FFE93F80"
            android:autoText="true"
            android:layout_below="@+id/btnVRS"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp" />

        /* android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"*/


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVPS"
            android:src="@mipmap/manb"
            android:tint="#a3a1a1"
            android:background="#2f323b"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Update Collection"
            android:id="@+id/textView6"
            android:textColor="#FFE93F80"
            android:layout_below="@+id/btnMB"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVPD"
            android:src="@mipmap/vp"
            android:tint="#a3a1a1"
            android:background="#2f323b"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Vehicle check in/out"
            android:id="@+id/textView12"
            android:textColor="#FFE93F80"
            android:layout_below="@+id/btnCH"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="View Pending Deliveries"
            android:id="@+id/textView25"
            android:textColor="#FFE93F80"
            android:layout_below="@+id/btnVPD"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/td"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnRA"
            android:layout_marginRight="35dp"
            android:layout_marginTop="275dp"
            android:background="#2f323b"
            android:tint="#a3a1a1" />

        <TextView
            android:text="Roadside Assistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="#FFE93F80"
            android:layout_below="@+id/btnVPS"
            android:layout_marginRight="15dp"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCH"
            android:src="@mipmap/booking150"
            android:tint="#a3a1a1"
            android:background="#2f323b"

            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignEnd="@+id/textView12"
            android:layout_marginRight="10dp" />
        /* android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnMB"
        android:layout_alignStart="@+id/btnMB"*/

    </RelativeLayout>

</RelativeLayout>

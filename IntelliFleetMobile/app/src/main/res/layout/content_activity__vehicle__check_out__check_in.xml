<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="coding_crusade.intellifleetmobile.Activity_Vehicle_CheckOut_CheckIn"
    tools:showIn="@layout/activity_activity__vehicle__check_out__check_in"
    android:background="#2f323b">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="coding_crusade.intellifleetmobile.activity_fragment"
        android:id="@+id/fragment4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vehicle Registration:"
        android:id="@+id/textView15"
        android:layout_below="@+id/fragment4"
        android:layout_marginTop="15dp"
        android:textColor="#FFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtVehicleRegistration"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:textColor="#FFF"
        android:layout_toStartOf="@+id/fragment4"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Out"
        android:id="@+id/btnCheckOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtVehicleRegistration" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In"
        android:id="@+id/btnCheckIn"
        android:layout_below="@+id/txtVehicleRegistration"
        android:layout_toRightOf="@+id/btnCheckOut"
        android:layout_toEndOf="@+id/btnCheckOut"
        android:layout_marginTop="15dp" />

</RelativeLayout>

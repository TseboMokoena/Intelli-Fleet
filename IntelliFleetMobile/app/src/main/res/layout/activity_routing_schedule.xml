<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coding_crusade.intellifleetmobile.Activity_Routing">


    <Button
        android:text="Update Collection Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_Update_Collect" />

    <Button
    android:id="@+id/btn_request_direction"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="View alternative routes"
        android:layout_above="@+id/btn_Update_Collect"
        android:layout_centerHorizontal="true" />

    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="coding_crusade.intellifleetmobile.Activity_Routing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>